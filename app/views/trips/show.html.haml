%p
  %b Name:
  = @trip.name
%p
  %b Description:
  = @trip.description
%p
  = link_to 'Edit', edit_trip_path(@trip) |
  \#{link_to 'Back', trips_path}
%table.table.table-striped
  %tr
    %th Destination
    %th Description
    %th
  - @trip.destinations.each do |destination|
    %tr
      %td= link_to destination.name, trip_destination_path(@trip, destination)
      %td= destination.description
      %td= link_to 'edit', edit_trip_destination_path(@trip, destination)
%p
  = link_to 'New Destination', new_trip_destination_path(@trip)
