= form_for(@trip) do |f|
  - if @trip.errors.any?
    #error_explanation
      %h2
        = pluralize(@trip.errors.count, "error")
        prohibited this trip from being saved:
      %ul
        - @trip.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit class: 'btn btn-primary'
