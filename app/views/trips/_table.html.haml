%table#listing_trips.table.table-striped
  %thead
    %tr
      %th Name
      %th Description
      %th
  - @trips.each do |trip|
    %tr[trip]
      %td= link_to trip.name, trip
      %td= trip.description
      %td
        - if user_signed_in? && current_user == trip.user
          =link_to glyph(:edit), edit_trip_path(trip), class:'btn'
          = link_to raw('<i class="icon-remove icon-white"></i> Destroy'), trip, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn', remote: true